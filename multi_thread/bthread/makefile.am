DEFS          =
#
check_PROGRAMS    = bthread 
#
if CppAD_MS_COMPILER
# AM_CXXFLAGS     = -EHsc -g $(CXX_FLAGS) $(BTHREAD_FLAGS)
AM_CXXFLAGS       = -EHsc -DNDEBUG -O2 $(CXX_FLAGS) $(BTHREAD_FLAGS)
else
# AM_CXXFLAGS     = -g $(CXX_FLAGS) $(BTHREAD_FLAGS)
AM_CXXFLAGS       = -DNDEBUG -O2 $(CXX_FLAGS) $(BTHREAD_FLAGS)
endif
#
AM_CPPFLAGS       = -I. -I$(top_srcdir) 
#
AM_LDFLAGS        = $(BTHREAD_LIB) 
#
bthread_SOURCES   = \
	bthread.cpp \
\
	../arc_tan.cpp \
	../arc_tan.hpp \
\
	bthread_team.cpp      ../thread_team.hpp \
	a11c.cpp \
	simple_ad.cpp
	
test.sh: bthread$(EXEEXT) 
	echo "#! /bin/sh -e"      >  test.sh
	echo "./bthread a11c"      >> test.sh
	echo "./bthread simple_ad" >> test.sh
	chmod +x test.sh

test:: test.sh
	./test.sh
