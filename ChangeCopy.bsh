#! /bin/bash
list=`find . \
	\( -name '*.am'  \) -or \
	\( -name '*.ac'  \) -or \
	\( -name '*.ac'  \) -or \
	\( -name '*.bsh' \) -or \
	\( -name '*.cpp' \) -or \
	\( -name '*.h'   \) -or \
	\( -name '*.hpp' \) -or \
	\( -name '*.omh' \)`
list="
	$list
	COPYING
"
for file in $list
do
	if ! grep "Copyright (C)" $file >> /dev/null
	then
		echo "$file has not copyright message"
		exit 1
	fi
done
