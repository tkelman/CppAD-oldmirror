#
# automake input file
#
# CppAD pusts all it's preprocessor definitions in the cppad/config.h file
DEFS          =
#
if CppAD_BOOSTVECTOR
BOOST_INCLUDE = -I$(BOOST_DIR)
else
BOOST_INCLUDE =
endif
#
EXTRA_DIST       = cppad.sln cppad.vcproj
#
check_PROGRAMS   = cppad 
#
AM_CPPFLAGS   = -I$(top_srcdir) $(BOOST_INCLUDE)
#
# BEGIN OPTIMIZE
AM_CXXFLAGS   = -O2 -DNDEBUG -DSPEED_CPPAD $(CXX_FLAGS)
# END OPTIMIZE
#
# BEGIN DEBUG
# AM_CXXFLAGS   = -g $(CXX_FLAGS) -DSPEED_CPPAD
# END DEBUG
#
LDADD           = -lspeed
AM_LDFLAGS      = -L../src
#
cppad_SOURCES = \
	../main.cpp \
	compare.sh \
	det_lu.cpp  \
	det_minor.cpp \
	mat_mul.cpp \
	ode.cpp \
	poly.cpp \
	sparse_hessian.cpp \
	sparse_jacobian.cpp

cur_versus_new.sh: compare.sh
	cp $(srcdir)/compare.sh cur_versus_new.sh

test.sh: cppad$(EXEEXT)
	echo "#! /bin/sh -e"                 > test.sh
	echo "./cppad correct 123"          >> test.sh
	echo "./cppad correct 123 retape"   >> test.sh
	echo "./cppad correct 123 optimize" >> test.sh
	chmod +x test.sh
