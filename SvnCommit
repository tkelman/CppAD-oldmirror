# Change some file names and separate C++ source from its documentation.
#
# SvnCommit: file that made this commit plus comments about adding directories.
# ExpApxMain.cpp: move to here from ExpAppMain.cpp.
# ExpApx.hpp: source code part of old ExpApxExample.h file.
# ExpForExample.cpp: change cross reference to ExpApx.Implementation.
# ExpSeqExample.cpp: change cross reference to ExpApx.Implementation.
# ExpAppMain.cpp: move from here to ExpApxMain.cpp.
# ExpRevExample.cpp: change cross reference to ExpApx.Implementation.
# ExpApxExample.h: split from here to ExpApx.omh and ExpApx.hpp.
# Makefile.am: ExpApxExample.h -> ExpApx.hpp, ExpAppMain.cpp -> ExpApxMain.cpp.
# ExpSeqMain.cpp: ExpApxExample.h -> ExpApx.hpp.
# ExpApx.omh: specifications part of old ExpApxExample.h file.
add_list="
	Introduction/ExpApxMain.cpp
	Introduction/ExpApx.hpp
	omh/ExpApx.omh
"
change_list="
	SvnCommit
	Introduction/ExpForExample.cpp
	Introduction/ExpSeqExample.cpp
	Introduction/ExpRevExample.cpp
	Introduction/Makefile.am
	Introduction/ExpSeqMain.cpp
"
delete_list="
	Introduction/ExpAppMain.cpp
	Introduction/ExpApxExample.h
"
#----------------------------------------------------------------------
# Edit section above for individual cases, section below stays the same
# Do not use add_list to add directories; use the following instead:
#	svn add --non-recursive dir
#	svn commit directory -m "adding directory dir" dir
# where dir is replaced by the name of the directory. 
# Then use add_list to add the files within that directory.
#----------------------------------------------------------------------
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
count=0
for file in $add_list $change_list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if \
	[ $file != "CheckIncludeFile"  ] && \
	[ $file != "CheckIncludeOmh"   ] && \
	[ $file != "SvnCommit"         ] && \
	[ $file != "SvnCommit.sed"     ] && \
	[ $ext  != ".vcproj"           ] && \
	[ $ext  != ".vim"              ]
	then
		# automatic edits and backups
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f SvnCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
for file in $add_list
do
	echo "svn add $file ?"
done
for file in $delete_list
do
	echo "svn delete $file ?"
done
response=""
while [ "$response" != "c" ] && [ "$response" != "a" ]
do
	read -p "continue [c] or abort [a] ? " response
done
if [ "$response" = "c" ]
then
	for file in $add_list
	do
		svn add $file
	done
	for file in $delete_list
	do
		svn delete $file
	done
	svn commit --file svn.log $add_list $change_list $delete_list
else
	count=0
	for file in $add_list $change_list
	do
		count=`expr $count + 1`
		ext=`echo $file | sed -e "s/.*\././"`
		if \
		[ $file != "CheckIncludeFile"  ] && \
	   	[ $file != "CheckIncludeOmh"   ] && \
	   	[ $file != "SvnCommit"         ] && \
	   	[ $file != "SvnCommit.sed"     ] && \
	   	[ $ext  != ".vcproj"           ] && \
	   	[ $ext  != ".vim"              ]
		then
			# undo the automatic edits
			echo "mv junk.$count $file"
			mv junk.$count $file
		fi
	done
fi
