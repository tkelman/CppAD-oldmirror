# Split ExpRevExample.cpp to ExpApxRev.omh and ExpApxRev.cpp.
#
# SvnCommit: file that made this commit plus comments about adding directories.
# ExpApxRev.cpp: source code from ExpRevExample.cpp.
# ExpApxSeq.cpp: put Print in empty namspace and reduce global var dimensions.
# ExpRevExample.cpp: split into ExpApxRev.omh and ExpApxRev.cpp.
# Makefile.am: change ExpRevExample to ExpApxRev.
# ExpApxFor.cpp: put Print in empty namspace and reduce global var dimensions.
# ExpApxRev.omh: documentaiton from ExpRevExample.cpp.
# ExpApxFor.omh: use sweep to describe the calculation.
# ExpApxSeq.omh: minor edit.
# Introduction.omh: change ExpRevExample.cpp to ExpApxRev.omh.
add_list="
	Introduction/ExpApxRev.cpp
	omh/ExpApxRev.omh
"
change_list="
	SvnCommit
	Introduction/ExpApxSeq.cpp
	Introduction/Makefile.am
	Introduction/ExpApxFor.cpp
	omh/ExpApxFor.omh
	omh/ExpApxSeq.omh
	omh/Introduction.omh
"
delete_list="
	Introduction/ExpRevExample.cpp
"
#----------------------------------------------------------------------
# Edit section above for individual cases, section below stays the same
# Do not use add_list to add directories; use the following instead:
#	svn add --non-recursive dir
#	svn commit directory -m "adding directory dir" dir
# where dir is replaced by the name of the directory. 
# Then use add_list to add the files within that directory.
#----------------------------------------------------------------------
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
count=0
for file in $add_list $change_list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if \
	[ $file != "CheckIncludeFile"  ] && \
	[ $file != "CheckIncludeOmh"   ] && \
	[ $file != "SvnCommit"         ] && \
	[ $file != "SvnCommit.sed"     ] && \
	[ $ext  != ".vcproj"           ] && \
	[ $ext  != ".vim"              ]
	then
		# automatic edits and backups
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f SvnCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
for file in $add_list
do
	echo "svn add $file ?"
done
for file in $delete_list
do
	echo "svn delete $file ?"
done
response=""
while [ "$response" != "c" ] && [ "$response" != "a" ]
do
	read -p "continue [c] or abort [a] ? " response
done
if [ "$response" = "c" ]
then
	for file in $add_list
	do
		svn add $file
	done
	for file in $delete_list
	do
		svn delete $file
	done
	svn commit --file svn.log $add_list $change_list $delete_list
else
	count=0
	for file in $add_list $change_list
	do
		count=`expr $count + 1`
		ext=`echo $file | sed -e "s/.*\././"`
		if \
		[ $file != "CheckIncludeFile"  ] && \
	   	[ $file != "CheckIncludeOmh"   ] && \
	   	[ $file != "SvnCommit"         ] && \
	   	[ $file != "SvnCommit.sed"     ] && \
	   	[ $ext  != ".vcproj"           ] && \
	   	[ $ext  != ".vim"              ]
		then
			# undo the automatic edits
			echo "mv junk.$count $file"
			mv junk.$count $file
		fi
	done
fi
