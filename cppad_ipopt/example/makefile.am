# automake input file
#
# CppAD pusts all it's preprocessor definitions in the cppad/configure.hpp
DEFS          =
#
if CppAD_BOOST_DIR
BOOST_INCLUDE = -I$(BOOST_DIR)
else
BOOST_INCLUDE =
endif
# 
# Microsoft project files (and ipopt install utility for Visual Studio)
EXTRA_DIST        = \
	example_windows.bat \
	ode1.omh \
	ode2.omh
#
check_PROGRAMS    = example
#
AM_CXXFLAGS       = -g $(CXX_FLAGS) 
#
AM_CPPFLAGS       = -I. \
                   -I$(top_srcdir) \
                   -I$(top_srcdir)/cppad_ipopt/src \
                     $(BOOST_INCLUDE) \
                     -I$(IPOPT_DIR)/include
#
LDADD             = \
                    -lcppad_ipopt \
                    $(CPPAD_IPOPT_LIBS) \
                    $(FCLIBS) \
                    $(PTHREAD_LIB) \
                    $(DL_LIB)
AM_LDFLAGS        = -L../src 
#
example_SOURCES   = \
	example.cpp \
	get_started.cpp \
	ode_check.cpp \
	ode_check.hpp \
	ode_fast_check.cpp \
	ode_fast.hpp \
	ode_problem.hpp \
	ode_run.hpp \
	ode_simple_check.cpp \
	ode_simple.hpp

test.sh: example$(EXEEXT)
	echo "#! /bin/sh -e"  > test.sh
	echo "export LD_LIBRARY_PATH=\"$(CPPAD_IPOPT_LD_PATH)\"" >> test.sh
	echo "./example"     >> test.sh
	chmod +x test.sh

test: test.sh
	./test.sh
